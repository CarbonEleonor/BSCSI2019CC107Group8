<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_primary"
    tools:context=".views.VerifyStudent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_undraw_mobile_inbox_re_ciwq"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Verify your identity"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginBottom="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <EditText
                android:id="@+id/v_code_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Verification code"
                android:inputType="number"
                android:textSize="10pt"
                android:layout_weight="2"
                android:textColor="@color/indian_red"
                android:textColorHint="@color/indian_red"
                />
            <Button
                android:id="@+id/send_verification_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/label_send_code"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:textColor="@color/design_default_color_on_secondary"
                android:textSize="5pt"
                android:layout_gravity="center"
                />
        </LinearLayout>
        <Button
            android:id="@+id/toAdditionalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="Continue"
            android:textStyle="bold"
            android:background="@drawable/button_round_primary"
            />
    </LinearLayout>
</RelativeLayout>