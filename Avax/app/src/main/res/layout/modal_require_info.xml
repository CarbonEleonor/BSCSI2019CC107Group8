<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="550dp"
    android:layout_centerInParent="true"
    android:background="@color/purple_200"
    android:padding="30dp"
    >
    <TextView
        android:id="@+id/header_befriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us be friends..."
        android:textAlignment="textStart"
        android:textSize="20pt"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_befriends"

        android:text="We are from Taguig City University, and we wanted to make you feel our solicitude by extending the support on health especially these pandemic times."
        android:textSize="8pt" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10pt"
            android:layout_marginTop="10dp"
            android:text="Please provide you basic information for us to know more about you."
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/accept_add_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_round_primary"
            android:text="Introduce yourself"
            android:layout_marginTop="10dp"
            />
        <Button
            android:id="@+id/reject_add_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Not now"
            android:textColor="@color/purple_700"
            android:layout_marginTop="5dp"
            />
    </LinearLayout>

</RelativeLayout>